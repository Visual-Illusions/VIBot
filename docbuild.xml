<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="VIBot JavaDoc creator" default="zip">
	<description>
	    This script will build the VIBot JavaDocs and zip them
	</description>
	
	<target name="clean" description="Remove the output directories">
	    <delete dir="docs" />
	</target>
		
    <target name="init" depends="clean" description="Create the output directories.">
        <mkdir dir="docs" />
    </target>
	
    <target name="javadoc" depends="init">
        <javadoc 
        	access="private" 
        	author="true" 
        	classpath="${user.home}/.m2/repository/net/visualillusionsent/viutils/1.0.0/viutils-1.0.0.jar" 
        	destdir="docs" 
        	doctitle="VIBot - Visual Illusions Java IRC Bot" 
        	nodeprecated="false" 
        	nodeprecatedlist="false" 
        	noindex="false" 
        	nonavbar="false" 
        	notree="false" 
        	packagenames="net.visualillusionsent.vibot.*" 
        	source="1.7" 
        	sourcepath="src/main/java" 
        	splitindex="false" 
        	use="true" 
        	version="true"
        	windowtitle="VIBot JavaDocs">
        	<tag name="code.derivative" scope="all" description="Source Code Derivative:"/>
            <link href="http://docs.visualillusionsent.net/VIUtils"/>
        	<link href="http://docs.oracle.com/javase/7/docs/api"/>
        	<header><![CDATA[<h3><strong>VIBot</strong> v1.0</h3>]]></header>
        	<footer><![CDATA[<h3><strong>VIBot</strong> v1.0</h3>]]></footer>
        	<bottom><![CDATA[<i>Copyright &copy; 2012-2013 Visual Illusions Entertainment. All Rights Reserved.</i>]]></bottom>
        </javadoc>
    </target>
        	
	<target name="zip" depends="javadoc" description="Zips javadocs">
	    <zip destfile="VIBotDocs.zip" basedir="docs" />
	</target>
</project>
